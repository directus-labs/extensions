{
	"name": "@directus-labs/algolia-operation",
	"type": "module",
	"version": "1.0.0",
	"description": "Use Algolia to index your Directus data.",
	"icon": "extension",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/directus-labs/extensions.git"
	},
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-operation"
	],
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "operation",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"source": {
			"app": "src/app.ts",
			"api": "src/api.ts"
		},
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate"
	},
	"dependencies": {
		"@algolia/requester-node-http": "^5.21.0",
		"algoliasearch": "5"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "13.0.3",
		"@types/node": "^22.13.10",
		"typescript": "^5.8.2",
		"vue": "^3.5.13"
	}
}
